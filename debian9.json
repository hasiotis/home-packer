{
  "variables": {
    "url": "{{env `PROXMOX_URL`}}",
    "username": "{{env `PROXMOX_USERNAME`}}",
    "password": "{{env `PROXMOX_PASSWORD`}}",
    "storage_pool": "{{env `PROXMOX_STORAGE`}}"
  },
  "builders": [
    {
      "type": "proxmox",
      "proxmox_url": "{{user `url`}}api2/json",
      "username": "{{user `username`}}",
      "password": "{{user `password`}}",

      "node": "pve",
      "vm_name": "debian9-template-packer",
      "os": "l26",
      "memory": 1024,
      "scsi_controller": "virtio-scsi-pci",
      "network_adapters": [
        {
          "model": "virtio",
          "bridge": "vmbr0"
        }
      ],
      "disks": [
        {
          "type": "scsi",
          "disk_size": "20G",
          "storage_pool": "{{user `storage_pool`}}",
          "storage_pool_type": "lvm"
        }
      ],
      "cloud_init": true,
      "cloud_init_storage_pool": "{{user `storage_pool`}}",

      "iso_file": "local:iso/debian-9.13.0-amd64-netinst.iso",
      "http_directory": "http",
      "boot_wait": "10s",
      "boot_command": [
        "<esc><wait>",
        "auto url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed-debian9.cfg<enter>"
      ],

      "communicator": "ssh",
      "ssh_timeout": "30m",
      "ssh_username": "sysadmin",
      "ssh_password": "passw0rd",

      "unmount_iso": true,
      "template_name": "TEMPLATE-DEBIAN9",
      "template_description": "TEMPLATE :: Debian 9"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "scripts/debian9-setup.sh",
      "execute_command": "echo 'passw0rd' | {{.Vars}} sudo -S -E bash '{{.Path}}'"
    },
    {
      "type": "shell",
      "script": "scripts/debian-cleanup.sh",
      "execute_command": "echo 'passw0rd' | {{.Vars}} sudo -S -E bash '{{.Path}}'"
    }
  ]
}
